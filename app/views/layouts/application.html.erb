<!DOCTYPE html>
<html>
<head>
  <title>CourseBeat</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body style="background-color:#84c0d7;')">


<nav class="navbar navbar-default navbar-static-top navbar-inverse" role="navigation">
  <a class="navbar-brand" href="#">CourseBeat</a>
  <ul class="nav navbar-nav navbar-right">

    <%# if current_user %>
      <li><%#= link_to "Welcome, " + current_user.username, instructor_path(current_user.instructor_secret_code) %></li>
      <li><%#= link_to "Logout", logout_path, method: "get" %></li>
    <%# else %>
      <li><%#= link_to "Sign Up", new_instructor_path %></li>
      <li><%#= link_to "Login", new_session_path, method: "get" %></li>
    <%# end %>

    <li id="sign-up" data-toggle="modal" data-target="#new-lesson-modal"><a href="#">Sign Up</a></li>
    <li id="login"><a href="#">Login</a></li>

  </ul>
</nav>


<%= yield %>

</body>
</html>
